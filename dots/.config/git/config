[alias]
    aliases = "!git config --get-regexp ^alias\\. | grep -v '^alias\\.aliases' | awk '{sub(/^alias\\./, \"\", $1); printf \"%s =\", $1; for (i=2; i<=NF; i++) printf \" %s\", $i; print \"\"}'"
    branches = branch --all
    conf = config --global --edit
    dm = "!git branch --merged | grep -v '\\*' | xargs -n 1 git branch -d"
    lg = log --graph --date=relative --pretty=tformat:'%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen (%an %ad)%Creset'
    local = "!git log @{push}.."
    oops = commit -a --amend --no-edit
    pr = pull --rebase
    remotes = remote -v
    reword = commit --amend
    rh = reset HEAD
    tags = tag -l
    uncommit = reset --soft HEAD~1
    unstage = restore --staged
    untrack = rm --cached --
    whoami = config user.email

[branch]
    sort = -committerdate

[column]
    ui = auto

[commit]
    template = ~/.config/git/template
    verbose = true

[color]
    ui = auto

[core]
    autocrlf = input
    editor = nvim
    pager = less -FRX
    preloadindex = true
    whitespace = -trailing-space

[diff]
    algorithm = histogram
    colorMoved = plain
    context = 3
    interHunkContext = 10
    mnemonicPrefix = true
    renames = true

[fetch]
    all = true
    prune = true
    pruneTags = true

[help]
    autocorrect = prompt

[init]
    defaultBranch = main

[interactive]
    singleKey = true

[log]
    abbrevCommit = true
    follow = true

[merge]
    conflictstyle = zdiff3

[mergetool]
    keepBackup = false
    prompt = false
    writeToTemp = true

[pager]
    blame = true
    diff = true
    log = true
    show = true

    branch = false
    status = false
    tag = false

[pull]
    default = current
    rebase = true

[push]
    autoSetupRemote = true
    default = upstream
    followTags = true

[rebase]
    autoSquash = true
    autoStash = true
    updateRefs = true

[rerere]
    enabled = true
    autoupdate = true

[status]
    branch = true
    showUntrackedFiles = all

[tag]
    sort = version:refname

