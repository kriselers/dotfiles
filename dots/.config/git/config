[core]
    editor = vim
    autocrlf = input
    pager = less -FRX
    preloadindex = true
    whitespace = -trailing-space

[color]
    ui = auto

[alias]
    dm = "!git branch --merged | grep -v '\\*' | xargs -n 1 git branch -d"
    lg = log --graph --date=relative --pretty=tformat:'%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen (%an %ad)%Creset'
    pr = pull --rebase
    rh = reset HEAD
    conf = config --global --edit
    oops = commit -a --amend --no-edit
    local = "!git log @{push}.."
    reword = commit --amend
    uncommit = reset --soft HEAD~1
    unstage = restore --staged
    untrack = rm --cached --
    branches = branch --all
    remotes = remote -v
    tags = tag -l
    whoami = config user.email
    aliases = "!git config --get-regexp ^alias\\. | grep -v '^alias\\.aliases' | awk '{sub(/^alias\\./, \"\", $1); printf \"%s =\", $1; for (i=2; i<=NF; i++) printf \" %s\", $i; print \"\"}'"

[commit]
    verbose = true
    template = ~/.config/git/template

[push]
    default = upstream
    followTags = true
    autoSetupRemote = true

[pull]
    default = current

[fetch]
    prune = true

[init]
    defaultBranch = main

[log]
    abbrevCommit = true
    follow = true

[rebase]
    autoStash = true

[status]
    showUntrackedFiles = all
    branch = true

[diff]
    renames = copies
    context = 3
    interHunkContext = 10
    tool = vscode

[difftool "vscode"]
    cmd = code --wait --diff $LOCAL $REMOTE

[merge]
    tool = vscode
    conflictstyle = diff3

[mergetool]
    prompt = false
    keepBackup = false
    writeToTemp = true

[pager]
    log = true
    diff = true
    show = true
    blame = true

    branch = false
    tag = false
    status = false

[interactive]
    singleKey = true

[url "https://github.com/kriselers/"]
    insteadOf = "me:"

[url "https://github.com/"]
    insteadOf = "gh:"

[user]
	name = Kristopher Elers
	email = kristopherelers@gmail.com
